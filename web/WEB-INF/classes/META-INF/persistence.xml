<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="ChronoMedPU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:comp/env/jdbc/chronomed</jta-data-source>
        <class>data.entities.Useraccount</class>
        <class>data.entities.Patient</class>
        <class>data.entities.Medicalconsultation</class>
        <class>data.entities.Healthcard</class>
        <class>data.entities.Doctor</class>
        <class>data.entities.DoctorPatient</class>
        <class>data.entities.Administrative</class>
        <class>data.entities.Medicalhistory</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://mealtera.com:3306/chronomed"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <!--<property name="hibernate.connection.username" value="chronomed"/>-->
            <!--<property name="hibernate.connection.password" value="chronomed"/>-->
            <property name="hibernate.connection.datasource" value="java:comp/env/jdbc/chronomed"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>

        </properties>

    </persistence-unit>
</persistence>
