<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>presentation.controller.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/FrontController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <resource-ref>
        <description>[Your Description]</description>
        <res-ref-name>jdbc/chronomed</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


    <resource-env-ref>
        <resource-env-ref-name>
            ServerLifetimeBean
        </resource-env-ref-name>
        <resource-env-ref-type>
            business.beans.ServerLifetimeBean
        </resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <resource-env-ref-name>
            AbstractFacade
        </resource-env-ref-name>
        <resource-env-ref-type>
            data.facades.AbstractFacade
        </resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <resource-env-ref-name>
            UseraccountFacade
        </resource-env-ref-name>
        <resource-env-ref-type>
            data.facades.UseraccountFacade
        </resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <resource-env-ref-name>
            AdministrativeFacade
        </resource-env-ref-name>
        <resource-env-ref-type>
            data.facades.AdministrativeFacade
        </resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <resource-env-ref-name>
            DoctorFacade
        </resource-env-ref-name>
        <resource-env-ref-type>
            data.facades.DoctorFacade
        </resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <resource-env-ref-name>
            DoctorPatientFacade
        </resource-env-ref-name>
        <resource-env-ref-type>
            data.facades.DoctorPatientFacade
        </resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <resource-env-ref-name>
            HealthcardFacade
        </resource-env-ref-name>
        <resource-env-ref-type>
            data.facades.HealthcardFacade
        </resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <resource-env-ref-name>
            MedicalconsultationFacade
        </resource-env-ref-name>
        <resource-env-ref-type>
            data.facades.MedicalconsultationFacade
        </resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <resource-env-ref-name>
            MedicalhistoryFacade
        </resource-env-ref-name>
        <resource-env-ref-type>
            data.facades.MedicalhistoryFacade
        </resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <resource-env-ref-name>
            PatientFacade
        </resource-env-ref-name>
        <resource-env-ref-type>
            data.facades.PatientFacade
        </resource-env-ref-type>
    </resource-env-ref>

</web-app>